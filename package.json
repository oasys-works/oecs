  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oasys-works/oecs.git"
  },
  "homepage": "https://github.com/oasys-works/oecs#readme",
  "bugs": {
    "url": "https://github.com/oasys-works/oecs/issues"
  },
  "license": "MIT",
  "keywords": [
    "ecs",
    "entity-component-system",
    "archetype",
    "gamedev"
  ],
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^4.0.18"
  }
}
